
 
<h1> <%= @doctor.name %> </h1>
<h3><%= @doctor.department %></h3>

<strong>Appointments</strong>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li>Time: <%=appointment.appointment_datetime.strftime("%B %e, %Y at %H:%M")%>
    - Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient) %> </li>
  <% end %>
</ul>
